<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/VentaList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{ventaHome.wire}"/>

   <param name="ventaFrom"/>
   <param name="ventaId" value="#{ventaHome.ventaId}"/>
   <param name="clienteFrom"/>
   <param name="clienteId" value="#{clienteHome.clienteId}"/>



   <navigation from-action="#{ventaHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Venta.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{ventaHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Venta.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{ventaHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/VentaList.xhtml"/>
      </rule>
   </navigation>

</page>
